    "widget.shadow": "#00000080",
    "selection.background": "#44475A",
    "descriptionForeground": "#6272A4",
    "errorForeground": "#FF5555",
    
    "textLink.foreground": "#8BE9FD",
    "textLink.activeForeground": "#00F0FF",

    "editor.background": "#1A1625",
    "editor.foreground": "#E5E9F0",
    "editor.lineHighlightBackground": "#2D2A3E80",
    "editor.selectionBackground": "#44475A",
    "editorCursor.foreground": "#00F0FF",
    "editorWhitespace.foreground": "#6272A450",
    "editorIndentGuide.background": "#6272A450",
    "editorIndentGuide.activeBackground": "#BD93F9",
    "editorLineNumber.foreground": "#6272A4",
    "editorLineNumber.activeForeground": "#F1FA8C",

    "sideBar.background": "#1A1625",
    "sideBar.foreground": "#E5E9F0",
    "sideBar.border": "#1A1625",
    "sideBarSectionHeader.background": "#1A1625",
    "sideBarSectionHeader.foreground": "#BD93F9",
    "sideBarTitle.foreground": "#FF79C6",

    "activityBar.background": "#1A1625",
    "activityBar.foreground": "#FF79C6",
    "activityBar.border": "#1A1625",
    "activityBar.inactiveForeground": "#6272A4",
    "activityBarBadge.background": "#FF79C6",
    "activityBarBadge.foreground": "#1A1625",

    "titleBar.activeBackground": "#1A1625",
    "titleBar.activeForeground": "#E5E9F0",
    "titleBar.inactiveBackground": "#1A1625",
    "titleBar.inactiveForeground": "#6272A4",
    "titleBar.border": "#1A1625",

    "statusBar.background": "#1A1625",
    "statusBar.foreground": "#BD93F9",
    "statusBar.border": "#1A1625",
    "statusBar.debuggingBackground": "#FF5555",
    "statusBar.debuggingForeground": "#1A1625",
    "statusBarItem.hoverBackground": "#2D2A3E",

    "editorGroupHeader.tabsBackground": "#1A1625",
    "editorGroupHeader.border": "#1A1625",
    "tab.activeBackground": "#2D2A3E",
    "tab.activeForeground": "#00F0FF",
    "tab.activeBorderTop": "#FF79C6",
    "tab.inactiveBackground": "#1A1625",
    "tab.inactiveForeground": "#6272A4",
    "tab.border": "#1A1625",

    "input.background": "#2D2A3E",
    "input.foreground": "#E5E9F0",
    "input.border": "#BD93F9",
    "input.placeholderForeground": "#6272A4",
    
    "dropdown.background": "#2D2A3E",
    "dropdown.foreground": "#E5E9F0",
    "dropdown.border": "#BD93F9",
    "dropdown.listBackground": "#1A1625",

    "list.hoverBackground": "#2D2A3E",
    "list.activeSelectionBackground": "#44475A",
    "list.activeSelectionForeground": "#00F0FF",
    "list.inactiveSelectionBackground": "#44475A80",
    
    "button.background": "#BD93F9",
    "button.foreground": "#1A1625",
    "button.hoverBackground": "#FF79C6",

    "scrollbarSlider.background": "#6272A450",
    "scrollbarSlider.hoverBackground": "#BD93F980",
    "scrollbarSlider.activeBackground": "#FF79C6CC",

    "peekViewEditor.background": "#1A1625",
    "peekViewResult.background": "#1A1625",
    "terminal.background": "#1A1625",
    "terminal.foreground": "#E5E9F0"
  },
  "tokenColors": [
    {
      "name": "Comments",
      "scope": ["comment", "punctuation.definition.comment"],
      "settings": { "foreground": "#5C6370", "fontStyle": "italic" }
    },
    {
      "name": "Keywords & Control Flow",
      "scope": ["keyword", "storage.type", "storage.modifier"],
      "settings": { "foreground": "#FF79C6", "fontStyle": "bold" }
    },
    {
      "name": "Functions & Methods",
      "scope": ["entity.name.function", "support.function", "meta.function-call"],
      "settings": { "foreground": "#00F0FF", "fontStyle": "bold" }
    },
    {
      "name": "Variables (Default - White)",
      "scope": ["variable", "meta.variable", "variable.language"],
      "settings": { "foreground": "#E5E9F0" }
    },
    {
      "name": "Object Properties (Purple)",
      "scope": ["variable.other.property", "support.type.property-name", "variable.other.object"],
      "settings": { "foreground": "#BD93F9" }
    },
    {
      "name": "Parameters (Orange)",
      "scope": ["variable.parameter"],
      "settings": { "foreground": "#FFB86C", "fontStyle": "italic" }
    },
    {
      "name": "Strings (Yellow)",
      "scope": ["string"],
      "settings": { "foreground": "#F1FA8C" }
    },
    {
      "name": "Numbers & Booleans",
      "scope": ["constant.numeric", "constant.language"],
      "settings": { "foreground": "#FFB86C" }
    },
    {
      "name": "Classes & Components (React/Python)",
      "scope": ["entity.name.type", "support.class", "entity.name.class", "new.expr entity.name.type"],
      "settings": { "foreground": "#8BE9FD", "fontStyle": "underline" }
    },
    {
      "name": "Decorators (Python/AI) & Annotations",
      "scope": ["meta.function.decorator", "meta.decorator", "entity.name.function.decorator"],
      "settings": { "foreground": "#F1FA8C", "fontStyle": "italic" }
    },
    {
      "name": "HTML Tags",
      "scope": ["entity.name.tag"],
      "settings": { "foreground": "#FF79C6" }
    },
    {
      "name": "Attributes (HTML/JSX)",
      "scope": ["entity.other.attribute-name"],
      "settings": { "foreground": "#50FA7B", "fontStyle": "italic" }
    },
    {
      "name": "JSON/YAML Keys",
      "scope": ["support.type.property-name.json", "entity.name.tag.yaml"],
      "settings": { "foreground": "#FF79C6" }
    }
  ],
  "semanticHighlighting": true
}